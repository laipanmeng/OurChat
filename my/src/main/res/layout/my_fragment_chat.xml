<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myviewmodel"
            type="com.lpm_wxl.my.viewmodel.MyFragmentViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightgray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/avatar_iv"
        android:background="@drawable/my_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/user_name_tv"
        android:text="Linsane"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
        android:background="@drawable/top_fillet_background"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" >

        <ImageView
            android:id="@+id/qr_code_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/qrcode"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/qr_code_tv"
            app:layout_constraintLeft_toRightOf="@+id/qr_code_iv"
            app:layout_constraintTop_toTopOf="parent"
            android:text="二维码"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/qr_code_right_tv"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/right"
            android:onClick="@{()->myviewmodel.qrCodeOnClickListener()}"
            android:layout_width="30dp"
            android:layout_height="30dp" />

<!--        ***************************-->
        <ImageView
            android:id="@+id/set_code_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_right_tv"
            android:background="@drawable/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/set_code_tv"
            app:layout_constraintLeft_toRightOf="@+id/set_code_iv"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_right_tv"
            android:text="设置"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/set_code_right_tv"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_right_tv"
            android:layout_marginRight="20dp"
            android:onClick="@{()->myviewmodel.settingOnClickListener()}"
            android:background="@drawable/right"
            android:layout_width="30dp"
            android:layout_height="30dp" />


<!--        ****************************-->
        <ImageView
            android:id="@+id/help_code_iv"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/set_code_iv"
            android:background="@drawable/help"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/help_code_tv"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/help_code_iv"
            app:layout_constraintTop_toBottomOf="@+id/set_code_iv"
            android:text="帮助与客服"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/help_code_right_tv"
            android:layout_marginTop="20dp"
            android:background="@drawable/right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_code_iv"
            android:layout_marginRight="20dp"
            android:onClick="@{()->myviewmodel.helpOnClickListener()}"
            android:layout_width="30dp"
            android:layout_height="30dp" />



<!--        *************************-->

        <ImageView
            android:id="@+id/about_code_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/help_code_iv"
            android:background="@drawable/about"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/about_code_tv"
            app:layout_constraintLeft_toRightOf="@+id/about_code_iv"
            app:layout_constraintTop_toBottomOf="@+id/help_code_iv"
            android:text="关于"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/about_code_right_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/help_code_iv"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:onClick="@{()->myviewmodel.aboutOnClickListener()}"
            android:background="@drawable/right"
            android:layout_width="30dp"
            android:layout_height="30dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>